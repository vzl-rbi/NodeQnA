<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Q&A Community</title>
    <link rel="stylesheet" href="navbar.css" />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: Arial, sans-serif;
        background: #f5f5f5;
        color: #333;
        line-height: 1.6;
      }

      .logo {
        font-size: 1.5rem;
        font-weight: bold;
        color: #4f46e5;
      }

      .btn-ask {
        background: #4f46e5;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        text-decoration: none;
      }

      .container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
      }

      header {
        text-align: center;
        margin-bottom: 2rem;
      }

      h1 {
        font-size: 2rem;
        margin-bottom: 0.5rem;
        color: #1e293b;
      }

      .subtitle {
        color: #666;
      }

      .questions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
      }

      .question-card {
        background: white;
        border-radius: 8px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
        cursor: pointer;
      }

      .question-card:hover {
        transform: translateY(-2px);
      }

      .question-title {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        color: #1e293b;
      }

      .question-desc {
        color: #666;
        margin-bottom: 1rem;
        display: -webkit-box;
        line-clamp: 3;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .question-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.9rem;
        color: #888;
        border-top: 1px solid #eee;
        padding-top: 1rem;
      }

      .author {
        font-weight: bold;
        color: #4f46e5;
      }

      @media (max-width: 768px) {
        .nav-links {
          gap: 1rem;
        }

        .questions-grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <%- include("./components/navbar.ejs") %>
    <strong style="color: green"><%- success %></strong>

    <div class="container">
      <header>
        <h1>Community Questions</h1>
        <p class="subtitle">Find answers and help others</p>
      </header>

      <div class="questions-grid">
        <% if (data && data.length > 0) { %> <% data.forEach(item => { %>
        <div
          class="question-card"
          onclick="window.location.href='/question/<%= item.id %>'"
        >
          <a style="text-decoration: none; color: inherit">
            <h3 class="question-title"><%= item.title %></h3>
            <p class="question-desc">
              <%= item.description ? item.description.substring(0, 150) + '...'
              : 'No description' %>
            </p>
            <div class="question-footer">
              <span class="author"><%= item.user.username %></span>
              <span><%= new Date(item.createdAt).toLocaleDateString() %></span>
            </div>
          </a>
        </div>
        <% }) %> <% } %>
      </div>
    </div>
  </body>
</html>
